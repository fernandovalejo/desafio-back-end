<div class="container mt-5 pt-5 ">
  <div class="row justify-content-center">
    <div class="col">
      <div class="card shadow-sm">

        <div class="card-header bg-light ">
          <div class="row">
            <div class="col">
              <h3 class="h-auto pt-1"><strong>Lojas</strong></h3>
            </div>
          </div>
        </div>

        <div class="card-body">
          <table class="table table-bordered form-group">
            <thead>
            <th class="text-left">
              <%= sort_link(@q, :nome) do %>
                Nome
              <% end %></th>
            <th class="text-right">
              <%= sort_link(@q, :saldo) do %>
                Saldo
              <% end %>
            </th>
            <th class="text-center">Ações</th>
            </thead>
            <tbody>
            <% @lojas.each do |l| %>
              <tr>
                <td class="text-left"><%= l.nome %></td>
                <td class="text-right"> <%= formata_valor l.saldo %></td>
                <td class="text-center">
                  <%= link_to "Transações", loja_transacoes_path(l), class: "btn btn-outline-primary" %>
                </td>
              </tr>
            <% end %>
            </tbody>
          </table>

          <%== pagy_bootstrap_nav @pagy %>
        </div>

        <div class="card-footer text-center text-muted bg-light">
          <strong>Desafio Back-End</strong>
        </div>
      </div>
    </div>
  </div>
</div>
