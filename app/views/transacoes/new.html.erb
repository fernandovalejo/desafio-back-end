<div class="container mt-5 pt-5 ">
  <div class="row justify-content-center">
    <div class="col">
      <div class="card shadow-sm">

        <div class="card-header">
          <div class="row">
            <div class="col">
              <h3 class="h-auto pt-1"><strong>Upload CNAB</strong></h3>
            </div>
          </div>
        </div>

        <div class="card-body">
          <%= form_with(url: transacoes_path, multipart: true) do |f| %>
            <p class="alert alert-info border-0">Utilize o campo abaixo para fazer o Upload do arquivo CNAB</p>

            <div class="form-group row">
              <div class="col">
                <%= f.file_field :arquivo_cnab, class: "form-control form-control-lg" %>
              </div>
            </div>

            <div class="form-group row">
              <div class="col">
                <%= f.submit "Upload", class: "btn btn-outline-success btn-lg" %>
              </div>
            </div>
          <% end %>

        </div>

        <div class="card-footer text-center text-muted">
          <strong>Desafio Back-End</strong>
        </div>
      </div>
    </div>
  </div>
</div>
