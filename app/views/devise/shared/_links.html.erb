<div class="row text-left">

  <%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
    <div class="col-12">
      <%= link_to "Não recebeu instruções de confirmação?", new_confirmation_path(resource_name), class: " text-primary" %>
      <br/>
    </div>
  <% end %>

  <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
    <div class="col-12">
      <%= link_to "Esqueceu sua senha?", new_password_path(resource_name), class: " text-primary" %><br/>
    </div>
  <% end %>


  <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
    <div class="col-12">
      <%= link_to "Criar conta", new_registration_path(resource_name), class: " text-primary" %><br/>
    </div>
  <% end %>

  <%- if controller_name != 'sessions' %>
    <div class="col-12">
      <%= link_to "Entrar", new_session_path(resource_name), class: " text-primary"  %><br/>
    </div>
  <% end %>


  <%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
    <div class="col-12">
      <%= link_to "Não recebeu instruções de desbloqueio?", new_unlock_path(resource_name), class: " text-primary" %>
      <br/>
    </div>
  <% end %>

  <%- if devise_mapping.omniauthable? %>
    <%- resource_class.omniauth_providers.each do |provider| %>
      <div class="col-6">
        <%= link_to "Entrar com #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), class:  "text-primary" %>
      </div>
    <% end %>
  <% end %>

</div>