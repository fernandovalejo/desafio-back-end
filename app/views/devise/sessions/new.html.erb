<div class="container mt-5 pt-5 ">
  <div class="row justify-content-center">
    <div class="col-xl-5">
      <div class="card border-0 shadow-lg">

        <div class="card-header bg-primary border-0">
          <div class="row">
            <div class="col text-center">
              <%= image_tag("logo.png", class: "img-fluid px-4") %>
            </div>
          </div>
        </div>

        <div class="card-body border-0">
          <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

            <div class="row">
              <div class="col">
                <%= f.input :email, required: false, autofocus: true, input_html: {autocomplete: "email"} %>
              </div>
            </div>

            <div class="row">
              <div class="col">
                <%= f.input :password, required: false, label: "Senha", input_html: {autocomplete: "current-password"} %>
              </div>
            </div>

            <div class="row">
              <div class="col">
                <%= f.input :remember_me, label: "Lembrar-me", input_html: {class: "align-middle"}, as: :boolean if devise_mapping.rememberable? %>
              </div>
            </div>

            <div class="form-group row">
              <div class="col">
                <%= f.button :submit, "Entrar", class: 'col btn btn-outline-primary' %>
              </div>
            </div>

          <% end %>

          <%= render "devise/shared/links" %>
        </div>

        <div class="card-footer text-muted text-center border-0">
          Desevolvido por: <a href="https://github.com/fernandovalejo" target="_blank" class="text-primary">Fernando</a>
        </div>
      </div>
    </div>
  </div>
</div>